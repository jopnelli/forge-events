  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "gulp build",
    "build-manifest": "yq eval-all '. as $item ireduce ({}; . * $item )' manifest.base.yml manifest.$FORGE_ENV.yml > manifest.yml",
    "build-manifest:ci": "/usr/bin/yq eval-all '. as $item ireduce ({}; . * $item )' manifest.base.yml manifest.$FORGE_ENV.yml > manifest.yml",
    "test": "jest",
    "test:ci": "cd ./remote/run && firebase emulators:exec 'npm run test'",
    "lint": "DEBUG=eslint:cli-engine eslint ./static/shared ./static/**/src ./remote/run/**/src --ext .ts,.tsx ",
    "lint:fix": "DEBUG=eslint:cli-engine eslint ./static/shared ./static/**/src ./remote/run/**/src --ext .ts,.tsx --fix",
    "forge:tunnel": "node tunnel-check.js; FORGE_USER_VAR_DATABASE_TOKEN=localdev:x forge tunnel",
    "postinstall": "(cd static && npm install); (cd static/contentBylineItem && npm install); (cd static/modal && npm install); (cd remote/run/language && npm install);",
    "remove-all-node-modules": "(rm -rf ./node_modules); (cd static && rm -rf ./node_modules); (cd static/contentBylineItem && rm -rf ./node_modules);  (cd static/modal && rm -rf ./node_modules); (cd remote/run && rm -rf ./node_modules);"
  }
}
