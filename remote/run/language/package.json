{
  "name": "language-service",
  "version": "0.0.0",
  "description": "Backend service to allow access to firestore",
  "main": "dist/out.js",
  "scripts": {
    "start": "node dist/out.js",
    "build": "tsc & node build.js",
    "serve": "FORGE_USER_VAR_DATABASE_TOKEN=localdev:x EMULATOR_PROJECT_ID=$(firebase use) nodemon src/app.ts",
    "deploy": "gcloud builds submit --project=$(firebase use)"
  },
  "engines": {
    "node": "16",
    "npm": ">=7"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "^0.13.4",
    "esbuild-node-externals": "^1.3.0",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.15.1",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.8",
    "@types/node": "^16.10.2",
    "@koa/router": "^10.1.1",
    "koa": "^2.13.3"
  }
}
